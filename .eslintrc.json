{
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": [
    "svelte3",
    "cypress",
    "chai-friendly"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:cypress/recommended",
    "plugin:chai-friendly/recommended"
  ],
  "overrides": [
    {
      "files": ["**/*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
  "rules": {
    "semi": ["error", "never"],
    "quote": ["error", "single"],
    "indent": ["error", 2],
    "comma-dangle": ["error", "only-multiline"]
  }
}
