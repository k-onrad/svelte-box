{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": [
    "svelte3",
    "cypress",
    "chai-friendly"
  ],
  "extends": [
    "standard",
    "plugin:cypress/recommended",
    "plugin:chai-friendly/recommended"
  ],
  "overrides": [
    {
      "files": ["**/*.svelte"],
      "processor": "svelte3/svelte3"
    }
  ],
  "rules": {
    "no-multiple-empty-lines": "off"
  }
}
